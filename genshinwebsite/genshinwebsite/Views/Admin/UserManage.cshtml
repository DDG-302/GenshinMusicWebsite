@model UserManageViewModel
@{
    ViewData["Title"] = Model.Name;
}
<p class="h2" style="text-align:center">用户信息修改</p>
<hr />
<form method="post">

    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-2">
            <label asp-for="Account"></label>
        </div>

        <div class="col">
            <input class="form-control" asp-for="Account" value="@Model.Account" />
        </div>


    </div>
    <div class="row">
        <div class="col-2">
            <label asp-for="Password"></label>
        </div>

        <div class="col">
            <input class="form-control" asp-for="Password" />
        </div>
    </div>


    <div class="row">
        <div class="col-2">
            <label asp-for="Name"></label>
        </div>

        <div class="col">
            <input class="form-control" asp-for="Name" value="@Model.Name" />
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            <label asp-for="Role"></label>
        </div>

        <div class="col">
            <label>@Model.Role.ToString()</label>
        </div>
    </div>
    @if (User.IsInRole("God"))
    {
        <div class="row">
            <div class="col-2">
                <label asp-for="Role"></label>
            </div>

            <div class="col">
                <select class="form-control" asp-for="Role" asp-items="@Html.GetEnumSelectList<Role_type>()"></select>
            </div>
        </div>
    }

    <div class="row">
        <div class="col">
            <div class="bg-warning">@Html.ValidationSummary()</div>
        </div>
    </div>
    @if (ViewData["result"] != null)
    {
        @foreach (var data in (List<string>)ViewData["result"])
        {
            <div class="row">
                <div class="col">
                    <p class="text-success"> @data</p>
                </div>
            </div>
        }
    }



    <div class="row text-center mb-2">
        <div class="col-md-4 offset-md-4 col-lg-4 offset-lg-4">
            <button class="btn-info" type="submit" name="register">提交修改</button>
        </div>
    </div>

</form>

