@{ViewData["Title"] = "用户管理";}
@model IEnumerable<UserModel>

<div class="row">
    <input name="inp" class="form-control" />
    <button class="btn-light" action="Index" onclick="javascript:location.href=">搜索</button>
</div>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">角色ID</th>
            <th scope="col">角色名</th>
            <th scope="col">操作</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var r in Model)
        {
            <tr>
                <th scope="row">@r.Id</th>
                <td>@r.UserName</td>
                <td>
                    <form asp-action="DeleteRole" asp-route-id="@r.Id" method="post">
                        <a asp-action="RoleManage" asp-route-id="@r.Id" class="btn btn-info">编辑信息</a>
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('确认删除？')">
                            删除
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddRole" class="btn btn-primary">添加角色</a>


<ul class="pagination">
    @if (int.Parse(ViewData["page_offset"].ToString()) - 1 >= 0)
    {
        <li class="page-item"><a class="page-link" href="?page_offset=@(int.Parse(ViewData["page_offset"].ToString())-1)">&laquo;</a></li>
    }

    <li class="page-item"><a class="page-link" href="?id=2">1</a></li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="">...</a></li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
</ul>