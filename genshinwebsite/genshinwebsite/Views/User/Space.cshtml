@using Microsoft.AspNetCore.Identity
@inject UserManager<UserModel> UserManager
@inject SignInManager<UserModel> SignInManager
@{
    if (SignInManager.IsSignedIn(User))
    {
        ViewData["Title"] = @User.Identity.Name;
    }

}

<div class="row mt-4">
    <div class="col-2 offset-2 col-md-2 offset-md-2">
        <span class="label">
            UID：
        </span>
    </div>
    <div class="col-7 offset-1 col-md-7 offset-md-1">
        <span class="label">
            @UserManager.GetUserId(User)
        </span>
    </div>
</div>

<div class="row mt-4">
    <div class="col-2 offset-2 col-md-2 offset-md-2">
        <span class="label">
            用户名：
        </span>
    </div>
    <div class="col-7 offset-1 col-md-7 offset-md-1">
        <span class="label">
            @User.Identity.Name
        </span>
    </div>
</div>
<div class="row mt-4">
    <div class="col-4 offset-4 col-md-4 offset-md-4">
        <a class="btn btn-info" style="width:100%" asp-action="upload">上传乐谱</a>
    </div>
</div>
<div class="row mt-4">
    <div class="col-4 offset-4 col-md-4 offset-md-4">
        <a class="btn btn-info" style="width:100%"  asp-action="UploadManager">can can need</a><br />
    </div>
</div>
<div class="row mt-4">
    <div class="col-4 offset-4 col-md-4 offset-md-4">
        <a class="btn btn-info" style="width:100%" asp-action="Setting">设置</a><br />
    </div>
</div>
