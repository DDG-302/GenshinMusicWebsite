@{
    ViewData["Title"] = "忘记密码";
}

@model UpdatePasswordModel
<link rel="stylesheet" href="~/css/font-awesome.css">
<link rel="stylesheet" href="~/171/171.css">

@*<script src="~/lib/jquery/dist/jquery.js"></script>*@
<script src="https://cdn.staticfile.org/jquery/3.5.1/jquery.min.js"></script>
<div id="info_div">

</div>

@Html.AntiForgeryToken();
<div class="container1" >
    <h1>忘记密码</h1>

    <div class="ipt-box1">
        <input id="email_input" onmouseover="this.title='输入要找回的账号'" asp-for="Account" type="text" placeholder="要找回的邮箱" autocomplete="off">
    </div>
    <div class="ipt-box1">
        <input onmouseover="this.title='重新设置您的密码'" asp-for="Password" type="password" id="password" placeholder="重置密码" autocomplete="off">
        <i id="eye" class="eye fa fa-eye-slash"></i>
        <div class="beam1"></div>
    </div>
    <div class="ipt-box1">
        <input onmouseover="this.title='确认您的新密码'" asp-for="ConfirmPassoword" type="password" id="confirm_password" placeholder="确认密码" autocomplete="off">
        <i id="confirm_eye" class="eye fa fa-eye-slash"></i>
        <div class="beam1"></div>
    </div>


    <div class="ipt-box1" id="vcode_div">
        @*<div class="row">
            <div class="col-8">
                <input onmouseover="this.title='邮箱验证码'" style="width:100%" name="VCode" type="text" placeholder="邮箱验证码" autocomplete="off">
            </div>
            <div class="col-4">
                <button onmouseover="this.title='请先输入您的邮箱'" class="btn-info" style="width:100%;height:100%;" type="button" onclick="get_VCode_click()">获取邮箱验证码</button>
            </div>
        </div>*@
    </div>
    <button class="btn-login1" type="button" onclick="submit_click()">提交修改信息</button>
</div>

<script src="~/171/171.js"></script>
<script src="~/js/register.js"></script>
