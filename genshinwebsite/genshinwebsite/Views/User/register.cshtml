@{
    ViewData["Title"] = "注册";
}

@model UserRegisterViewModel
<link rel="stylesheet" href="~/css/font-awesome.css">
<link rel="stylesheet" href="~/171/171.css">

@*<script src="~/lib/jquery/dist/jquery.js"></script>*@
<script src="https://cdn.staticfile.org/jquery/3.5.1/jquery.min.js"></script>
@foreach (var error in ViewData.ModelState.Values.SelectMany(modelState => modelState.Errors))
{
    <div class="alert alert-danger alert-dismissable" >
        @error.ErrorMessage
        <button class="close" type="button" data-dismiss="alert" aria-hidden="true">&times</button>
    </div>
}

<form method="post">
    @Html.AntiForgeryToken()
    <div class="container1">
        <h1>注册</h1>

        <div class="ipt-box1">
            <input id="email_input" onmouseover="this.title='以您的邮箱作为账号'" asp-for="Account" type="text" placeholder="您的邮箱" autocomplete="off">
        </div>
        <div class="ipt-box1">
            <input onmouseover="this.title='设置您的昵称'" asp-for="Name" type="text" placeholder="您的昵称" autocomplete="off">
        </div>
        <div class="ipt-box1">
            <input onmouseover="this.title='设置您的密码'" asp-for="Password" type="password" id="password" placeholder="密码" autocomplete="off">
            <i id="eye" class="eye fa fa-eye-slash"></i>
            <div class="beam1"></div>
        </div>
        <div class="ipt-box1">
            <input onmouseover="this.title='确认您的密码'" asp-for="ConfirmPassoword" type="password" id="confirm_password" placeholder="确认密码" autocomplete="off">
            <i id="confirm_eye" class="eye fa fa-eye-slash"></i>
            <div class="beam1"></div>
        </div>


        <div class="ipt-box1">
            <div class="row">
                <div class="col-8">
                    <input onmouseover="this.title='邮箱验证码'" style="width:100%" asp-for="VCode" type="text" placeholder="邮箱验证码" autocomplete="off">
                </div>
                <div class="col-4">

                    <button onmouseover="this.title='请先输入您的邮箱'" class="btn-info" style="width:100%;height:100%;" type="button" onclick="get_VCode_click()">获取邮箱验证码</button>
                </div>
            </div>
        </div>
        <button class="btn-login1" type="submit">提交注册信息</button>
    </div>


</form>
<script src="~/171/171.js"></script>
<script src="~/js/register.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>