@{
    ViewData["Title"] = "注册";
}

@model UserRegisterViewModel

<script src="~/lib/jquery/dist/jquery.js"></script>
   <p class="h2" style="text-align:center">用户注册</p>
<hr />

<form method="post">

    @Html.AntiForgeryToken()
    <div class="row mt-2 mb-2">
        <div class="col-sm-2 col-md-2 offset-md-3 col-lg-2 offset-lg-3">
            <label asp-for="Account"></label>
        </div>

        <div class="col-sm-4 col-md-4 col-lg-4 ">
            <input class="form-control" asp-for="Account" id="email_input" />
        </div>


    </div>
    <div class="row mb-2">
        <div class="col-sm-2 col-md-2 offset-md-3 col-lg-2 offset-lg-3">
            <label asp-for="Password"></label>
        </div>

        <div class="col-sm-4 col-md-4 col-lg-4">
            <input class="form-control" asp-for="Password" />
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-sm-2 col-md-2 offset-md-3 col-lg-2 offset-lg-3">
            <label asp-for="ConfirmPassoword"></label>
        </div>

        <div class="col-sm-4 col-md-4 col-lg-4">
            <input class="form-control" asp-for="ConfirmPassoword" />
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-sm-2 col-md-2 offset-md-3 col-lg-2 offset-lg-3">
            <label asp-for="Name"></label>
        </div>

        <div class="col-sm-4 col-md-4 col-lg-4">
            <input class="form-control" asp-for="Name" />
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-sm-2 col-md-2 offset-md-3 col-lg-2 offset-lg-3">
            <label asp-for="VCode"></label>
        </div>

        <div class="col-sm-4 col-md-4 col-lg-4">
            <input class="form-control" asp-for="VCode" />

        </div>
        <div class="col-sm-2 col-md-2 col-lg-2">
            <button type="button" class="btn-info" onclick="get_VCode_click()">获取验证码</button>
        </div>

    </div>

    <div class="row mb-2">
        <div class="col-sm-2 col-md-2 offset-md-3 col-lg-2 offset-lg-3">
            <label>确认码：</label>
        </div>

        <div class="col-sm-4 col-md-4 col-lg-4">
            <input class="form-control" name="confirm_code" type="text" />

        </div>


    </div>
    <div class="row mb-2">
        <div class="col-sm-6 col-md-7 offset-md-3 col-lg-6 offset-lg-3">
            <div class="bg-warning">@Html.ValidationSummary()</div>
        </div>
    </div>




    <div class="row text-center mb-2">
        <div class="col-md-4 offset-md-4 col-lg-4 offset-lg-4">
            @*<button type="button" name="register" onclick="submit_click()">提交注册</button>*@
            <input type="submit" value="提交注册" />
        </div>
    </div>



</form>

<script src="~/js/register.js"></script>
